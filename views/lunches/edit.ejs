<% include ../partials/header %>

<div class="container"></div>
    <div class="row">
        <h1 style="text-align:center">Edit Lunch on <%= lunch.date %></h1>
        
        <div style="width:30%; margin: 25px auto">
        <form action="/lunches/<%= lunch._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type = "text" value="<%= lunch.date%>" name = "lunch[date]">
            </div>
            <div class="form-group">
                <input class="form-control" type = "text" value="<%= lunch.time%>" name = "lunch[time]">
            </div>
            <div class="form-group">
                <input class="btn btn-lg btn-primary btn-block" type ="submit">
            </div>
        </form>
        <a href="/lunches">Go Back</a>
        </div>

    </div>
</div>
<% include ../partials/footer %>